<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <welcome-file-list>
    <welcome-file>home</welcome-file>
  </welcome-file-list>
  <error-page>
    <location>/WEB-INF/error404.jsp</location>
  </error-page>
  <context-param>
    <param-name>resteasy.scan</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>resteasy.servlet.mapping.prefix</param-name>
    <param-value>/ws</param-value>
  </context-param>
  <servlet>
    <servlet-name>Resteasy</servlet-name>
    <servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Resteasy</servlet-name>
    <url-pattern>/ws/*</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>ForceSetPasswordFilter</display-name>
    <filter-name>ForceSetPasswordFilter</filter-name>
    <filter-class>ets.secure_webapp.filters.AuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ForceSetPasswordFilter</filter-name>
    <url-pattern>/ForceSetPasswordFilter</url-pattern>
  </filter-mapping>
</web-app>